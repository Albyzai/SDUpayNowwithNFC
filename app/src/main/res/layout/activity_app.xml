<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gruppe16.sdupay.AppActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indkøbsliste"
            android:id="@+id/Title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/abc_action_button_min_width_overflow_material"
            android:textColor="#054465"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_below="@+id/Title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/streg"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:layout_gravity="center_horizontal" />

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flippy"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cartView">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:touchscreenBlocksFocus="false"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SDUTheme"
                            android:text="Saldo:"
                            android:id="@+id/saldo" />

                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/SDUTheme"
                            android:layout_height="wrap_content"
                            android:id="@+id/balanceTV" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SDUTheme"
                    android:id="@+id/txtTagContent"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp" />

                <Button
                    android:layout_width="228dp"
                    android:layout_height="60dp"
                    android:text="SKAN"
                    android:id="@+id/scanBtn"
                    android:layout_above="@+id/linearLayout"
                    android:layout_alignRight="@+id/Title"
                    android:layout_alignEnd="@+id/Title"
                    android:layout_below="@+id/Title"
                    android:layout_alignLeft="@+id/Title"
                    android:layout_alignStart="@+id/Title"
                    android:textColor="#FFFFFF"
                    android:background="#054465"
                    android:layout_gravity="center"
                    android:layout_marginTop="305dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/favView"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton"
                        android:layout_marginLeft="60dp"
                        android:background="#c5e0eb"
                        android:layout_marginTop="46dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton2"
                        android:background="#c5e0eb"
                        android:layout_marginLeft="60dp"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_toRightOf="@+id/imageButton"
                        android:layout_toEndOf="@+id/imageButton" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton3"
                        android:background="#c5e0eb"
                        android:layout_below="@+id/imageButton"
                        android:layout_alignLeft="@+id/imageButton"
                        android:layout_alignStart="@+id/imageButton"
                        android:layout_marginTop="50dp" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton4"
                        android:background="#c5e0eb"
                        android:layout_alignTop="@+id/imageButton3"
                        android:layout_alignLeft="@+id/imageButton2"
                        android:layout_alignStart="@+id/imageButton2" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton5"
                        android:background="#c5e0eb"
                        android:layout_below="@+id/imageButton3"
                        android:layout_alignLeft="@+id/imageButton3"
                        android:layout_alignStart="@+id/imageButton3"
                        android:layout_marginTop="50dp" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton6"
                        android:background="#c5e0eb"
                        android:layout_below="@+id/imageButton4"
                        android:layout_alignLeft="@+id/imageButton4"
                        android:layout_alignStart="@+id/imageButton4"
                        android:layout_marginTop="50dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/histView" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="December"
                    android:id="@+id/month"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="1. DECEMBER - 100KR"
                    android:id="@+id/button2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#054365"
                    android:drawableRight="@drawable/arrowup"
                    android:drawableEnd="@drawable/arrowup"
                    android:textColor="#ffffff"
                     />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/accView">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        style="@style/SDUTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo:"
                        android:id="@+id/textView2" />

                    <TextView
                        style="@style/SDUTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/balanceTV1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6"
                        android:id="@+id/moneyAmount"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="INDSÆT"
                        android:id="@+id/depositMoneyBtn"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#054465"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

        </ViewFlipper>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c5e0eb"
            android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
            android:paddingRight="@dimen/abc_action_bar_content_inset_material"
            android:id="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/cartBtn"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/cartbtn"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/favBtn"
                android:src="@drawable/favbtn"
                android:layout_alignTop="@+id/cartBtn"
                android:layout_toRightOf="@+id/cartBtn"
                android:layout_toEndOf="@+id/cartBtn"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/histBtn"
                android:src="@drawable/historybtn"
                android:layout_alignTop="@+id/favBtn"
                android:layout_toRightOf="@+id/favBtn"
                android:layout_toEndOf="@+id/favBtn"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/profileButton"
                android:clickable="false"
                android:src="@drawable/profilebtn"
                android:layout_alignTop="@+id/histBtn"
                android:layout_toRightOf="@+id/histBtn"
                android:layout_toEndOf="@+id/histBtn"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/menuBtn"
                android:clickable="false"
                android:src="@drawable/menubtn"
                android:layout_alignTop="@+id/histBtn"
                android:layout_toRightOf="@+id/histBtn"
                android:layout_toEndOf="@+id/histBtn"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
